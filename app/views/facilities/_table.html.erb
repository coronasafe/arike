<div class="px-3 md:px-8">
  <div class="flex flex-wrap md:-mx-4">
    <% facilities.each do |facility| %>
      <div class="w-full md:w-1/2 mt-6 md:px-4">
        <div class="block rounded-lg bg-white shadow h-full hover:border-primary-500 overflow-hidden">
          <div class="h-full flex flex-col justify-between">
            <div class="px-6 py-4">
              <div class="inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium leading-5 bg-blue-100 text-blue-800"><%= facility.kind %></div>
              <div class="font-black text-2xl capitalize mt-2"><%= facility.name %></div>
              <div class="mt-2 flex justify-between">
                <div class="flex flex-col">
                  <div class="text-gray-500 leading-relaxed font-light">Location:</div>
                  <div class="font-semibold"><%= facility.address %></div>
                </div>
                <div class="flex flex-col">
                  <div class="text-gray-500 leading-relaxed font-light">Ward:</div>
                  <div class="font-semibold"><%= facility.ward_info.name %></div>
                </div>
              </div>
            </div>
            <div class="mt-2 bg-gray-50 border-t px-6 py-2">
              <div class="flex py-4 justify-between">
                <div>
                  <div class="text-gray-500 leading-relaxed">Phone:</div>
                  <a href=<%= "tel:" + facility.phone.to_s %> class="font-semibold"><%= "+91 " + facility.phone %></a></div>
                <span class="inline-flex rounded-md shadow-sm"><%= link_to "View Facility", facility_path(facility.id), class: "inline-flex items-center px-3 py-2 border border-green-500 text-sm leading-4 font-medium rounded-md text-green-700 bg-white hover:text-green-500 focus:outline-none focus:border-green-300 focus:shadow-outline-blue active:text-green-800 active:bg-gray-50 transition ease-in-out duration-150 hover:shadow" %></span></div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6 mt-6">
  <div class="flex-1 flex justify-between sm:hidden">
    <%= link_to facilities_path({:page => @page == 1 ? @page : @page - 1}), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" do %>
      <span class="sr-only">Previous</span>
      <!-- Heroicon name: solid/chevron-left -->
      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
      </svg>
    <% end %>
    <%= link_to facilities_path({:page => @page == @page ? @total_pages : @page + 1}), class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
      <span class="sr-only">Next</span>
      <!-- Heroicon name: solid/chevron-right -->
      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
    <% end %>
  </div>
  <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
    <div>
      <p class="text-sm text-gray-700">
        Showing
        <span class="font-medium"><%= (@facilities_count ==0 ? 0 : @CARDS_PER_PAGE * (@page-1) + 1) %></span>
        to
        <span class="font-medium"><%= [@CARDS_PER_PAGE * @page, @facilities_count].min %></span>
        of
        <span class="font-medium"><%= @facilities_count %></span>
        results
      </p>
    </div>
    <div>
      <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
        <%= link_to facilities_path({:page => @page == 1 ? @page : @page - 1}), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" do %>
          <span class="sr-only">Previous</span>
          <!-- Heroicon name: solid/chevron-left -->
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
        <% end %>
        <%= link_to @page, facilities_path({:page => @page}), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" %>
        <%= link_to facilities_path({:page => @page == @total_pages ? @total_pages : @page + 1}), class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
          <span class="sr-only">Next</span>
          <!-- Heroicon name: solid/chevron-right -->
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        <% end %>
      </nav>
    </div>
  </div>
</div>
