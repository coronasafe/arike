<div class="px-3 md:px-8">
  <div class="flex flex-wrap md:-mx-4">
    <% facilities.each do |facility| %>
      <div class="w-full md:w-1/2 mt-6 md:px-4">
        <div class="block rounded-lg bg-white shadow h-full hover:border-primary-500 overflow-hidden">
          <div class="h-full flex flex-col justify-between">
            <div class="px-6 py-4">
              <div class="inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium leading-5 bg-blue-100 text-blue-800"><%= facility.kind %></div>
              <div class="font-black text-2xl capitalize mt-2"><%= facility.name %></div>
              <div class="mt-2 flex justify-between">
                <div class="flex flex-col">
                  <div class="text-gray-500 leading-relaxed font-light">Location:</div>
                  <div class="font-semibold"><%= facility.address %></div>
                </div>
                <div class="flex flex-col">
                  <div class="text-gray-500 leading-relaxed font-light">Ward:</div>
                  <div class="font-semibold"><%= facility.ward_info.name %></div>
                </div>
              </div>
            </div>
            <div class="mt-2 bg-gray-50 border-t px-6 py-2">
              <div class="flex py-4 justify-between">
                <div>
                  <div class="text-gray-500 leading-relaxed">Phone:</div>
                  <a href=<%= "tel:" + facility.phone.to_s %> class="font-semibold"><%= facility.phone %></a></div>
                <span class="inline-flex rounded-md shadow-sm"><%= link_to "View Facility", facility_path(facility.id), class: "inline-flex items-center px-3 py-2 border border-green-500 text-sm leading-4 font-medium rounded-md text-green-700 bg-white hover:text-green-500 focus:outline-none focus:border-green-300 focus:shadow-outline-blue active:text-green-800 active:bg-gray-50 transition ease-in-out duration-150 hover:shadow" %></span></div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
