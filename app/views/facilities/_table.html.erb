<div class="px-3 md:px-8">
  <div class="flex flex-wrap md:-mx-4">
    <% facilities.each do |facility| %>
      <div class="w-full md:w-1/2 mt-6 md:px-4">
        <div class="block rounded-lg bg-white shadow h-full hover:shadow-lg hover:border-2 hover:border-primary-500 overflow-hidden">
          <div class="h-full flex flex-col justify-between">
            <div class="px-6 py-4">
              <div class="inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium leading-5 bg-blue-100 text-blue-800"><%= facility.kind %></div>
              <div class="font-black text-2xl capitalize mt-2"><%= facility.name %></div>
              <div class="mt-2 flex justify-between">
                <div class="flex flex-col">
                  <div class="text-gray-500 leading-relaxed font-light">Location:</div>
                  <div class="font-semibold"><%= facility.address %></div>
                </div>
                <div class="flex flex-col">
                  <div class="text-gray-500 leading-relaxed font-light">Ward No:</div>
                  <div class="font-semibold"><%= facility.ward_info.number %></div>
                </div>
              </div>
            </div>
            <div class="mt-2 bg-gray-50 border-t px-6 py-2">
              <div class="flex py-4 justify-between">
                <div>
                  <div class="text-gray-500 leading-relaxed">Phone:</div>
                  <a href=<%= "tel:" + facility.phone.to_s %> class="font-semibold">+91 <%= facility.phone %></a></div>
                <span class="inline-flex rounded-md shadow-sm"><%= link_to "View Facility", facility_path(facility.id), class: "inline-flex items-center px-3 py-2 border border-blue-500 text-sm leading-4 font-medium rounded-md text-blue-700 bg-white hover:text-blue-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-blue-800 active:bg-gray-50 transition ease-in-out duration-150 hover:shadow" %></span></div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6 mt-6">
  <div class="flex-1 flex justify-between sm:hidden">
    <%= link_to facilities_path({:page => @page == 1 ? @page : @page - 1}), class: "relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
      <span class="sr-only">Previous</span>
      <i class="fas fa-chevron-left"></i>
    <% end %>
    <%= link_to facilities_path({:page => @page == @page ? @total_pages : @page + 1}), class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
      <span class="sr-only">Next</span>
      <i class="fas fa-chevron-right"></i>
    <% end %>
  </div>
  <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
    <div>
      <p class="text-sm text-gray-700">
        Showing
        <span class="font-medium"><%= (@facilities_count ==0 ? 0 : @CARDS_PER_PAGE * (@page-1) + 1) %></span>
        to
        <span class="font-medium"><%= [@CARDS_PER_PAGE * @page, @facilities_count].min %></span>
        of
        <span class="font-medium"><%= @facilities_count %></span>
        results
      </p>
    </div>
    <div>
      <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
        <%= link_to facilities_path({:page => @page == 1 ? @page : @page - 1}), class: "relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 text-sm font-medium text-gray-500 hover:bg-gray-50"+(@page <= 1 ? " pointer-events-none bg-gray-200" : " bg-white") do %>
          <span class="sr-only">Previous</span>
          <i class="fas fa-chevron-left"></i>
        <% end %>
        <% if @page > 1 %>
          <%= link_to @page - 1, facilities_path({:page => @page - 1}), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" %>
        <% end %>
        <%= link_to @page, facilities_path({:page => @page}), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-blue-500 text-sm font-medium text-white hover:bg-gray-50" %>
        <% if @page < @total_pages %>
          <%= link_to @page + 1, facilities_path({:page => @page + 1}), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" %>
        <% end %>
        <%= link_to facilities_path({:page => @page == @total_pages ? @total_pages : @page + 1}), class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 text-sm font-medium text-gray-500 hover:bg-gray-50" + (@page >= @total_pages ? " pointer-events-none bg-gray-200" : " bg-white")do %>
          <span class="sr-only">Next</span>
          <i class="fas fa-chevron-right"></i>
        <% end %>
      </nav>
    </div>
  </div>
</div>
