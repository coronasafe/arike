<div class="overflow-hidden sm:rounded-lg">
  <div class="px-8 sm:px-6">
    <h3 class="text-3xl leading-6 font-medium text-gray-800 mb-8 pb-8 border-b">
      Patient Information
    </h3>
    <div class="w-full bg-gray-800 my-1"></div>
    <div class="sm:flex mb-5 pb-12">
      <div class="w-full sm:w-3/4 md:w-3/5" style="min-height:12rem;">
        <div
          class="sm:mr-2 md:mr-4 bg-gray-50 p-4 sm:p-6 md:p-8 h-full rounded mb-8 sm:mb-4 border border-gray-200"
        >
          <p class="text-2xl capitalize mb-2">
            <%= @patient.full_name %>
          </p>
          <hr />
          <p class="my-2 text-gray-600 py-1 mb-4">
            <%= "#{@patient.facility.name},  #{@patient.facility.district}, #{@patient.facility.state}" %>
          </p>
          <div class="flex justify-between mt-8">
            <p class="font-medium text-gray-500">
              Last Visit :
              <span class="block font-normal text-xl text-gray-900"
                >1st March, 2021</span
              >
            </p>
            <p class="font-medium text-gray-500">
              Next Visit :
              <span class="text-xl block text-gray-900">11th April, 2021</span>
            </p>
          </div>
        </div>
      </div>
      <div class="w-full sm:w-1/4 md:w-2/5 justify-between">
        <div>
          <%=
            link_to 'Add Health Information',
                    disease_history_path,
                    class:
                      'w-full mx-1 mb-4 md:text-lg inline-flex justify-center py-4 px-4 border border-transparent shadow-sm rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500'
          %>
        </div>
        <div
          class="text-indigo-800 md:text-lg w-full mx-1 mb-4 inline-flex justify-center py-4 px-4 border border-transparent shadow-sm rounded-md text-white bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-200"
        >
          <img src="<%= asset_path 'icons/edit.svg' %>" class="mx-5" />
          <%= link_to "Edit Personal Details", { action: "edit" } %>
        </div>
        <div>
          <%=
            link_to 'Edit Family Details',
                    family_details_path,
                    class:
                      'text-indigo-800 md:text-lg w-full mx-1 inline-flex justify-center py-4 px-4 border border-transparent shadow-sm rounded-md text-white bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-200'
          %>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-8 ">
    <div class="col">
      <h3
        class="text-3xl leading-6 font-medium text-gray-800 mb-8 pb-8 border-b"
      >
        Additional Information
      </h3>

      <div class="flex justify-between mb-8 bg-indigo-100 px-8 py-4 rounded-md">
        <%= link_to "Personal Information", show_personal_details_path, class: "tab-label px-4 py-6 text-lg text-white bg-indigo-600 rounded hover:bg-indigo-800 w-3/12 text-center" %>
        <%= link_to "Family Details", show_family_details_path, class: "tab-label px-4 py-6 text-lg text-white bg-indigo-600 rounded hover:bg-indigo-800 w-3/12 text-center" %>
        <%= link_to "Disease History", show_disease_history_path, class: "tab-label px-4 py-6 text-lg text-white bg-indigo-600 rounded hover:bg-indigo-800 w-3/12 text-center" %>
      </div>

          <% if request.path == show_personal_details_path %>
            <div class="tab-content">
              <%= render partial: "/patients/personal_details/info-card", locals: {patient: @patient} %>
            </div>

          <% elsif request.path == show_family_details_path %>
            <div class="tab-content overflow-hidden bg-gray-100">
              <div class="md:flex md:flex-wrap bg-gray-100">
                <% @patient.family_details.each do |member| %>
                  <%= render partial: "/patients/family_tree/info-card", locals: {member: member} %>
                <% end %>
              </div>
            </div>

          <% else %>
            <div class="overflow-hidden bg-gray-100 p-0 sm:p-4">
              <div class="container bg-gray-200 mx-auto w-full h-full">
                <div
                  class="relative wrap overflow-hidden px-4 sm:px-6 md:px-8 h-full py-8"
                >
                  <div class="absolute h-full"></div>
                  <% @patient.patient_disease_summaries.order(date_of_diagnosis: :desc).each_with_index do |disease,i| %>
                    <%= render partial: "/patients/disease_history/info-card", locals: {disease: disease,index:i+1} %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
