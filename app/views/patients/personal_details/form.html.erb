<div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
      <%= form_with(model: patient) do |form| %>
        <div id="patient-form"></div>
        <script type="text/json" id="data">
          {
            "patient": <%= patient.to_json %>,
            "volunteers": <%= User.volunteers.to_a.map {|v| [v.full_name, v.id]} %>,
            "volunteers_selected": <%= patient.users.volunteers.to_a.map {|v| [v.full_name, v.id]} %>,
            "facility": <%= Facility.all.to_a.map {|facility| [facility.name, facility.id]} %>,
            "facility_selected": "<%= patient.facility %>",
            "reported_by": <%= User.nurses.to_a.map { |nurse| ["#{nurse.full_name} - #{nurse.role}", nurse.id]} %>,
            "reported_by_selected": "<%= patient.reported_by %>"
          }
        </script>
        <script>
          window.PatientFormPage.run()
        </script>
      <% end %>
  </div>
</div>
