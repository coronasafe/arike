<div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <%= form_with(model: @patient) do |form| %>
      <%= render partial: "patients/edit/personal_details", locals: { patient: @patient, form: form } %>
      <%= render partial: "patients/edit/family_tree", locals: {patient: @patient, form: form} %>

      <%= form.submit class: "mt-4 inline-flex justify-center py-2 px-4 border
      border-transparent shadow-sm text-sm font-medium rounded-md text-white
      bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2
      focus:ring-offset-2 focus:ring-indigo-500" %>
    <% end %>
  </div>
</div>
