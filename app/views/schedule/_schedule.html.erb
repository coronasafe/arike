<div class="flex flex-col">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Ward
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Patient Name
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Due date
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Review due in
              </th>

              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Last visited
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Procedures
              </th>

              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                referred by
              </th>

              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Disease
              </th>

              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Notes from previous Visit
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Schedule a Visit
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% visits.each do |visit| %>
              <% patient = Patient.all.find_by_id(visit.patient_id) %>
              <%= render partial: "patient-details", locals: { ward: Patient.get_ward(patient).number,
               name: patient.full_name,
                due_date: visit.expected_visit.to_time.strftime('%B %e, %Y'),
                review_due_in: (visit.expected_visit - DateTime.now).to_i/3600/24,
                last_visited: visit.last_visit.to_time.strftime('%B %e, %Y'),
                procedures: ["oral", "dialisis"],
                referred_by: User.find(patient.reported_by).first_name,
                diseases: [patient.disease],
                notes: [visit.records[visit.first_visit.strftime("%F")]["notes"]],
                visit_id: visit.id}%>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
