<%= content_for(:head) do %>
  <%= render partial: "layouts/home-nav" %>
<% end %>
<div class="mt-2">
  <div class="flex justify-center py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div>
        <h1 class="text-4xl text-center font-bold">Arike</h1>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
          Sign in to your account
        </h2>
      </div>
      <%= form_with model: @user, url: user_session_path, method: :POST, class: "mt-8 space-y-6" do |form| %>
        <div class="space-y-1">
          <%= form.label :login_id, "Email or Phone", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-2">
            <%=
              form.text_field :login_id,
                              {
                                placeholder: 'Email or Phone Number',
                                class:
                                  'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
                                autofocus: true,
                              }
            %>
          </div>
        </div>

        <div class="space-y-1">
          <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-2">
            <%=
              form.password_field :password,
                                  {
                                    placeholder: 'Password',
                                    class:
                                      'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
                                  }
            %>
          </div>
        </div>

        <div class="flex justify-between">
          <div class="flex items-center">
            <% if devise_mapping.rememberable? %>
              <%= form.check_box :remember_me, class: "h-5 w-5 mr-2 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
              <%= form.label :remember_me %>
            <% end %>
          </div>
          <%= link_to "Forgot Password?", new_user_password_path ,class:"text-blue-400"%>
        </div>

        <div>
          <%= form.button class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 disabled:opacity-50", data: { :disable_with => "Please wait..." }  do %>
            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
              <%= render partial: "layouts/icon-lock" %>
            </span>
            <span>Sign in</span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
