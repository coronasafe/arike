<div class="w-9/12 mx-auto">
  <div class="flex justify-between">
    <div class="font-bold text-2xl">Visits:</div>
    <%= link_to 'New Visit', patient_visit_details_new_path(@patient), class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
  </div>
  <% @visits.each_with_index do |visit, index| %>
    <div class="bg-gray-100 p-3 mb-3 mt-6 flex justify-between">
      <div>
        <div class="text-xl font-bold mb-2">
          Visit #<%= @visits.count() - index%>
        </div>
        <div>Created at: <%= visit.created_at %></div>
      </div>
      <div>
        <%= link_to 'View Details', patient_visit_detail_path(@patient, visit), class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-gray-400 hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500' %>
      </div>
    </div>
  <% end %>
</div>
