<div class="rounded-lg  relative group bg-white p-6 hover:bg-blue-50 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-500">
  <div>
    <span class="rounded-lg inline-flex p-3 bg-teal-50 text-teal-700 ring-4 ring-white">
      <i class="fas fa-<%= icon %> text-gray-600"></i>
    </span>
  </div>
  <div class="mt-8">
    <h3 class="text-lg font-medium">
      <%= link_to link do %>
        <!-- Extend touch target to entire panel -->
        <span class="absolute inset-0" aria-hidden="true"></span>
        <%= title %>
      <% end %>
    </h3>
    <p class="mt-2 text-sm text-gray-500">
      <%= text %>
    </p>
  </div>
  <span class="pointer-events-none absolute top-6 right-6 transform rotate-45 text-gray-300 group-hover:text-gray-400" aria-hidden="true">
    <i class="fas fa-arrow-up fa-2x"></i>
  </span>
</div>
